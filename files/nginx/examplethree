upstream examplethree_app {
  server unix:///srv/www/examplethree_app/current/tmp/sockets/puma.sock fail_timeout=0;
}

server {
  server_name examplethree.com;
  root /srv/www/examplethree.com/current/public;

  try_files $uri/index.html $uri @examplethree_app;

  location @examplethree_app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_pass http://examplethree_app;
  }

  error_page 500 504 /500.html;
  error_page 502 /502.html;
  error_page 503 /503.html;

  client_max_body_size 4G;
  keepalive_timeout 10;
}
